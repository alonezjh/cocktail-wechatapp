/**index.wxss**/
.container {
  background-color: #F2f2f2;
  min-height: 100%
}
.swiper-container{
  width: 750rpx;
  position: relative;  
}
.swiper_box {
  width: 100%;
  height: 30vh;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 30vh;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #000;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .3;
}  
.swiper-container .dots .dot.active{  
  opacity: .6;
}

.recommend{
  background: #fff;
  display: flex;
  justify-content: center;  
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}

.recommend image{
  width: 100%;
}

.recommend text{
  font-size: .9rem;
  margin-top: 15rpx;
}

.recommend view{
  display: flex;
  height: 50rpx;
  margin-top: 15rpx;
  justify-content: center;  
  flex-direction: row;
  align-items: center;
}

.recommend view image{
  width:5vw;
}

.recommend view text{
  display: flex;
  height: 50rpx;
  margin-top: 0rpx;
  font-size: .9rem;
  margin-left: 10rpx;
  color: #d50000;
  line-height: 50rpx;
  justify-content: center;  
  flex-direction: row;
  align-items: center;
}